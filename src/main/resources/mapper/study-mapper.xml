<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dmu.dasom.dasom_homepage.repository.StudyRepository">

    <select id="getProjects" resultType="StudyList">
        SELECT study_no, study_title, study_content, study_pic FROM study_table
    </select>

    <insert id="createProject" parameterType="Study">
        INSERT INTO study_table(study_no, writer_no, organizer_no, study_title, study_content, study_category, study_pic, start_date, end_date)
        VALUES(#{studyNo}, #{writerNo}, #{organizerNo}, #{studyTitle}, #{studyContent}, #{studyCategory}, #{studyPic}, #{startDate}, #{endDate})
    </insert>

    <update id="editProject" parameterType="Study">
        UPDATE study_table
        <!-- update organizer_no, title, content, category, pic, start,end date -->
        SET organizer_no = #{organizerNo}, study_title = #{studyTitle}, study_content = #{studyContent}, study_category = #{studyCategory}, study_pic = #{studyPic}, start_date = #{startDate}, end_date = #{endDate}
        WHERE study_no = #{studyNo}
    </update>

    <delete id="removeProject" parameterType="int">
        DELETE FROM study_table
        WHERE study_no = #{study_no}
    </delete>

    <select id="findProjectById" parameterType="int" resultType="Study">
        select *
        from study_table
        where study_no = #{study_no};
    </select>

    <!--  참가자 부분          -->

    <select id="getParticipants" parameterType="int" resultType="StudyParticipants">
        SELECT *
        FROM study_participants
        WHERE study_no = #{studyNo}
    </select>

    <delete id="removeParticipant" parameterType="StudyParticipants">
        DELETE FROM study_participants
        WHERE study_no = #{studyNo} and participant_no = #{participantNo}
    </delete>

    <insert id="addParticipant" parameterType="StudyParticipants">
        <!--        insert into study_participants-->
        <!--        valuse ( #{study_no}, #{participant_no}, #{participant_role})-->
        insert into study_participants
        values (#{studyNo}, #{participantNo}, #{participantRole})
    </insert>

    <select id="getParticipant" parameterType="StudyParticipants" resultType="StudyParticipants">
        SELECT *
        FROM study_participants
        WHERE study_no = #{studyNo} and participant_no = #{participantNo}
    </select>

    <!-- category | role 부분-->
    <insert id="addCategory" parameterType="Category">
        insert into study_project_category
        values (#{categoryName}, #{categoryDescription})
    </insert>
    <delete id="removeCategory" parameterType="String">
        delete from study_project_category
        where category_name = #{categoryName}
    </delete>
    <select id="getCategoryByName" parameterType="String" resultType="Category">
        select * from study_project_category
        where category_name = #{categoryName}
    </select>
    <select id="getProjectsNumByCategory" resultType="int" parameterType="String">
        select count(*)
        from study_table
        where study_category = #{categoryName}
    </select>

    <insert id="addRole" parameterType="Role">
        insert into study_project_role
        values (#{roleName}, #{roleDescription})
    </insert>
    <delete id="removeRole" parameterType="String">
        delete from study_project_role
        where role_name = #{role_name}
    </delete>
    <select id="getRoleByName" parameterType="String" resultType="Role">
        select * from study_project_role
        where role_name = #{role_name}
    </select>
    <select id="getParticipantsNumByRole" resultType="int" parameterType="String">
        select count(*)
        from study_participants
        where participant_role = #{role_name}
    </select>
</mapper>